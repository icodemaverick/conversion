<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/LblQtyKilograms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LblQtyKilograms"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/TxtQtyKilograms"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:autofillHints=""
        android:hint="@string/TxtQtyKilogramsHint"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblQtyKilograms" />

    <Button
        android:id="@+id/BtnConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnConvert"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtQtyKilograms" />

    <TextView
        android:id="@+id/LblQtyPounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LblQtyPounds"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnConvert"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/TxtQtyPounds"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:autofillHints=""
        android:hint="@string/TxtQtyPoundsHint"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LblQtyPounds" />


</androidx.constraintlayout.widget.ConstraintLayout>